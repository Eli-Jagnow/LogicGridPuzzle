
@{
    ViewData["Title"] = "Puzzle";
}

<h2>Puzzle</h2>

<h3>Clues</h3>

<ol>
    <li>Clue 1.</li>
    <li>Clue 2.</li>
    <li>Clue 3.</li>
</ol>

<hr />

<h3>Grid</h3>

<table class="puzzle-grid">
    <tr>
        <th id="tl"></th>
        <th>Top Header 1</th>
        <th>Top Header 2</th>
        <th>Top Header 3</th>
    </tr>
    <tr>
        <th>Side Header 1</th>
        <td>Row 2, Cell 1</td>
        <td>Row 2, Cell 2</td>
        <td>Row 2, Cell 3</td>
    </tr>
    <tr>
        <th>Side Header 2</th>
        <td>Row 3, Cell 1</td>
        <td>Row 3, Cell 2</td>
        <td>Row 3, Cell 3</td>
    </tr>
    <tr>
        <th>Side Header 3</th>
        <td>Row 4, Cell 1</td>
        <td>Row 4, Cell 2</td>
        <td>Row 4, Cell 3</td>
    </tr>
</table>
